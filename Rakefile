
require 'rubygems'
require 'echoe'

Echoe.new("avro_client") do |p|
  p.author = ["Wanli Yang", "Rael Dornfest"]
  p.project = "avro_client"
  p.summary = "A Avro client wrapper that encapsulates some common failover behavior."
  p.rubygems_version = ">= 0.8"
  p.dependencies = ['avro']
  p.ignore_pattern = /^(vendor\/avro)/
  p.rdoc_pattern = /^(lib|bin|tasks|ext)|^README|^CHANGELOG|^TODO|^LICENSE|^COPYING$/
  p.spec_pattern = "spec/*_spec.rb"
end
